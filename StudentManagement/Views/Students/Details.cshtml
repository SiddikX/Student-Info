@model Student

@{
    ViewData["Title"] = "Student Details";
}

<h3>Student Details</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <dl class="dl-horizontal">
            <dt>Name:</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>

            <dt>Class:</dt>
            <dd>@Html.DisplayFor(model => model.Class.Name)</dd>

            <dt>Date of Birth:</dt>
            <dd>@Model.DOB.ToString("dd-MM-yyyy")</dd>

            <dt>Gender:</dt>
            <dd>@(Model.Gender == 1 ? "Male" : "Female")</dd>

            <dt>Created Date:</dt>
            <dd>@Html.DisplayFor(model => model.CreatedDate)</dd>

            <dt>Modification Date:</dt>
            <dd>@Html.DisplayFor(model => model.ModificationDate)</dd>
        </dl>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
