@model Student
@{
    ViewData["Title"] = "Add New Student Info";
}

<h3>Add New Student Info</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label fw-bold"></label>
                <input asp-for="Name" class="form-control mb-1" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassId" class="control-label fw-bold">Class</label>
                <select asp-for="ClassId" asp-items="ViewBag.ClassId" class="form-control mb-1"></select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label fw-bold">Date of Birth</label>
                <input asp-for="DOB" class="form-control mb-1" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label fw-bold"></label>
                <div class="mb-1">
                    <input type="radio" asp-for="Gender" value="1" /> Male
                    <input type="radio" asp-for="Gender" value="2" /> Female
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label fw-bold"></label>
                <input asp-for="CreatedDate" class="form-control mb-1" readonly />
            </div>
            <div class="form-group">
                <label asp-for="ModificationDate" class="control-label fw-bold"></label>
                <input asp-for="ModificationDate" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2 mb-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="mb-2">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
