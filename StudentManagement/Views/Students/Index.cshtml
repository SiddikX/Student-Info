@model IEnumerable<Student>
@{
    ViewData["Title"] = "Home";
}
<a class="btn btn-outline-dark" asp-action="Create">Add New Student Info</a>
<br>
<br>
<h3>List of students</h3>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Class.Name</td>
                <td>@student.DOB.ToString("dd-MM-yyyy")</td>
                <td>@(student.Gender == 1 ? "Male" : "Female")</td>
                <td>
                    <a asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-success">Edit</a>
                    <a asp-controller="Students" asp-action="Details" asp-route-id="@student.Id" class="btn btn-info">Details</a>
                    <a asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
