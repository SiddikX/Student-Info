@model Student

@{
    ViewData["Title"] = "Delete Student";
}

<h3>Delete Student</h3>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Delete" method="post">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    Are you sure you want to delete this student?
                </div>
                <dl class="dl-horizontal">
                    <dt>Name:</dt>
                    <dd>@Html.DisplayFor(model => model.Name)</dd>

                    <dt>Class:</dt>
                    <dd>@Html.DisplayFor(model => model.Class.Name)</dd>

                    <dt>DOB:</dt>
                    <dd>@Model.DOB.ToString("dd-MM-yyyy")</dd>

                    <dt>Gender:</dt>
                    <dd>@(Model.Gender == 1 ? "Male" : "Female")</dd>

                    <dt>Created Date:</dt>
                    <dd>@Html.DisplayFor(model => model.CreatedDate)</dd>

                    <dt>Modification Date:</dt>
                    <dd>@Html.DisplayFor(model => model.ModificationDate)</dd>
                </dl>
            </div>
            
            <div class="form-group mb-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-default">Cancel</a>
            </div>
        </form>
    </div>
</div>
